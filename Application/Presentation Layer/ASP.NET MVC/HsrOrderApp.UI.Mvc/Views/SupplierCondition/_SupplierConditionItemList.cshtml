@model HsrOrderApp.UI.Mvc.Models.SupplierConditionListViewModel
@using HsrOrderApp.UI.Mvc.Resources

<p>
    @Html.ActionLink(@Strings.NewCommand, "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Strings.SupplierConditionView_Id
        </th>
        <th>
            @Strings.SupplierConditionView_SupplierName
        </th>
        <th>
            @Strings.SupplierConditionView_StandardPrice
        </th>
        <th>
            @Strings.SupplierConditionView_LastReceiptCost
        </th>
        <th>
            @Strings.SupplierConditionView_LastReceiptDate
        </th>
        <th>
            @Strings.SupplierConditionView_MinOrderQty
        </th>
        <th>
            @Strings.SupplierConditionView_MaxOrderQty
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SupplierName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StandardPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastReceiptCost)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastReceiptDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MinOrderQty)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MaxOrderQty)
    </td>
    <td>
        @Html.ActionLink(@Strings.EditCommand, "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
        @Html.ActionLink(@Strings.DetailsCommand, "Details", new { id = item.Id }, new { @class = "btn btn-default" })
        @Html.ActionLink(@Strings.DeleteCommand, "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
    </td>
</tr>
    }

</table>
